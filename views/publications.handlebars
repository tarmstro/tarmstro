<!doctype html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Example App - Home</title>
    <link href='http://fonts.googleapis.com/css?family=Cambo|Open+Sans' rel='stylesheet' type='text/css'>
    <style type='text/css'>
    h1 {font-family: 'Cambo', serif;}
    body {font-family: 'Open Sans', sans-serif;}
    </style>
</head>
<body>

    <!-- Uses built-in `if` helper. -->
  {{#if showTitle}}
    <h1>Home</h1>
  {{/if}}


    <div class="entry">
        <h1>{{title}}</h1>
        <h2>{{conference}}, {{year}}</h2>
        <div class="body">
            {{{body}}}
        </div>
    </div>

    {{#list author}}{{name}}{{/list}}


    <p>{{abstract}}</p>

    <!-- Calls `foo` helper, overridden at render-level. -->
    <p>{{foo}}</p>

    <!-- Calls `bar` helper, defined at instance-level. -->
    <p>{{bar}}</p>

</body>
</html>